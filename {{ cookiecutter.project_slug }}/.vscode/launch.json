{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File - {{ cookiecutter.project_name }}",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Pytest - {{ cookiecutter.project_name }}",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceRoot}/",
      "args": ["tests"]
    },
    {
      "name": "API - {{ cookiecutter.project_name }}",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceRoot}/src/{{ cookiecutter.project_slug }}",
      "args": ["main:app", "--reload", "--port", "8000"]
    },
    {
      "name": "MyPy - {{ cookiecutter.project_name }}",
      "type": "debugpy",
      "request": "launch",
      "module": "mypy",
      "cwd": "${workspaceRoot}/",
      "args": ["--ignore-missing-imports", "src/"]
    }
  ]
}
